<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/servis_katilari_edittext_margin_horizontal"
        android:paddingEnd="@dimen/servis_katilari_edittext_margin_horizontal"
        android:paddingTop="@dimen/yeni_servis_kaydi_padding_top"
        tools:context=".views.YeniServisKaydiActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/yeni_servis_kaydi_top_text_margin_bottom"
            android:text="@string/yeni_servis_olustur"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/yeni_servis_kaydi_top_text_size"
            android:background="@color/blue_3"
            android:padding="@dimen/yeni_servis_kaydi_top_text_padding"
            android:textColor="@color/white"/>

        <TextView
            style="@style/ETTitleTextViewAttr"
            android:layout_marginStart="@dimen/servis_katilari_edittext_margin_horizontal"
            android:layout_marginEnd="@dimen/servis_katilari_edittext_margin_horizontal"
            android:text="@string/musteri_ara" />

        <AutoCompleteTextView
            android:id="@+id/autoYeniKayitCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/auto_complete_background"
            android:drawableEnd="@drawable/ic_search"
            android:paddingStart="@dimen/auto_padiding_horizontal"
            android:paddingTop="@dimen/auto_padiding_vertical"
            android:paddingEnd="@dimen/auto_padiding_horizontal"
            android:paddingBottom="@dimen/auto_padiding_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/auto_text_size"
            android:layout_marginBottom="@dimen/service_margin_top_2"/>

        <EditText
            android:id="@+id/etYeniServisKayitMusteri"
            style="@style/Login_Edittext_Attr"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="start"
            android:background="@drawable/service_spinner_box_background"
            android:paddingTop="@dimen/servis_katilari_edittext_padding"
            android:paddingBottom="@dimen/servis_katilari_edittext_padding"
            android:paddingStart="@dimen/servis_katilari_edittext_padding2"
            android:paddingEnd="@dimen/servis_katilari_edittext_padding2"
            android:inputType="none"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginTop="@dimen/yeni_servis_kaydi_padding_top"/>

        <TextView
            style="@style/ETTitleTextViewAttr"
            android:layout_marginStart="@dimen/servis_katilari_edittext_margin_horizontal"
            android:layout_marginEnd="@dimen/servis_katilari_edittext_margin_horizontal"
            android:text="@string/servis_isteyen_cari_yetkilisi"
            android:layout_marginTop="@dimen/yeni_servis_kaydi_padding_top"/>

        <EditText
            android:id="@+id/etYeniServisKayitCariYetkili"
            style="@style/Login_Edittext_Attr"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="start"
            android:background="@drawable/service_spinner_box_background"
            android:paddingTop="@dimen/servis_katilari_edittext_padding"
            android:paddingBottom="@dimen/servis_katilari_edittext_padding"
            android:paddingStart="@dimen/servis_katilari_edittext_padding2"
            android:paddingEnd="@dimen/servis_katilari_edittext_padding2"
            android:inputType="text" />

        <TextView
            style="@style/ETTitleTextViewAttr"
            android:layout_marginStart="@dimen/servis_katilari_edittext_margin_horizontal"
            android:layout_marginEnd="@dimen/servis_katilari_edittext_margin_horizontal"
            android:text="@string/servis_konusu"
            android:layout_marginTop="@dimen/yeni_servis_kaydi_padding_top"/>

        <EditText
            android:id="@+id/etYeniServisKayitKonu"
            style="@style/Login_Edittext_Attr"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/service_spinner_box_background"
            android:layout_marginBottom="@dimen/servis_katilari_edittext_margin_bottom"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:gravity="start"
            android:paddingTop="@dimen/servis_konusu_padding"
            android:paddingBottom="@dimen/servis_konusu_padding"/>

        <Button
            android:id="@+id/btnYeniServisKayit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/service_button_margin_horizontal"
            android:layout_marginEnd="@dimen/service_button_margin_horizontal"
            android:layout_marginTop="@dimen/yeni_servis_kaydi_button_margin_vertical"
            android:layout_marginBottom="@dimen/yeni_servis_kaydi_button_margin_vertical"
            android:background="@drawable/login_button_background"
            android:textColor="@color/white"
            android:text="@string/kaydet"
            android:textSize="@dimen/servis_kayitlari_btn_text_size"/>

    </LinearLayout>
</ScrollView>