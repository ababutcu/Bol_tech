<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/tahsilat_report_btn_margin_vertical_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/service_report_margin_horizontal"
        android:layout_marginEnd="@dimen/service_report_margin_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etBaslangic"
            style="@style/WorkingCalendarEdittextAttr"
            android:text="@string/ornek_tarih_3" />

        <EditText
            android:id="@+id/etBitis"
            style="@style/WorkingCalendarEdittextAttr"
            android:text="@string/ornek_tarih_3"
            android:layout_marginEnd="0dp"/>

    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/autoCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/service_report_margin_horizontal"
        android:layout_marginEnd="@dimen/service_report_margin_horizontal"
        android:layout_marginTop="@dimen/tahsilat_report_padding_top"
        android:background="@drawable/auto_complete_background"
        android:drawableEnd="@drawable/ic_search"
        android:paddingStart="@dimen/auto_padiding_horizontal"
        android:paddingTop="@dimen/auto_padiding_vertical"
        android:paddingEnd="@dimen/auto_padiding_horizontal"
        android:paddingBottom="@dimen/auto_padiding_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/auto_text_size" />

    <EditText
        android:id="@+id/etCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/service_report_margin_horizontal"
        android:layout_marginEnd="@dimen/service_report_margin_horizontal"
        android:layout_marginTop="@dimen/tahsilat_report_padding_top"
        android:layout_marginBottom="@dimen/service_margin_top_2"
        android:background="@drawable/auto_complete_background"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="@string/musteri_adi"
        android:inputType="none"
        android:paddingStart="@dimen/alert_edittext_padding"
        android:paddingTop="@dimen/alert_edittext_padding"
        android:paddingEnd="@dimen/alert_edittext_padding"
        android:paddingBottom="@dimen/alert_edittext_padding"
        android:textColor="@color/black"
        android:textSize="@dimen/auto_text_size" />

    <LinearLayout
        android:id="@+id/llUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/tahsilat_report_padding_top"
        android:layout_marginStart="@dimen/service_report_margin_horizontal"
        android:layout_marginEnd="@dimen/service_report_margin_horizontal"
        android:background="@drawable/service_spinner_box_background"
        android:paddingStart="@dimen/service_spinner_box_padding"
        android:paddingTop="@dimen/tahsilat_spinner_box_padding_vertical"
        android:paddingEnd="@dimen/tahsilat_spinner_box_padding_vertical"
        android:paddingBottom="@dimen/service_spinner_box_padding_vertical">

        <Spinner
            android:id="@+id/spUserName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/user_list" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/service_margin_horizontal"
        android:layout_marginTop="@dimen/tahsilat_report_padding_top"
        android:layout_marginEnd="@dimen/service_margin_horizontal"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbTahsilatTumCariler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/service_margin_horizontal"
            android:layout_weight="1"
            android:checked="true"
            android:fontFamily="@font/roboto"
            android:text="@string/cari_bazli"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/cbTahsilatTumKullanicilar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:fontFamily="@font/roboto"
            android:text="@string/kullanici_bazli"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/service_report_margin_horizontal"
        android:layout_marginEnd="@dimen/service_report_margin_horizontal"
        android:layout_marginTop="@dimen/tahsilat_report_btn_margin_vertical"
        android:layout_marginBottom="@dimen/tahsilat_report_btn_margin_vertical">

        <Button
            android:id="@+id/btnKapat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="@dimen/service_report_edittext_padding"
            android:text="@string/kapat"
            android:textColor="@color/black"
            android:textSize="@dimen/service_button_button_text_size"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnGetir"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_background"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="@dimen/service_report_edittext_padding"
            android:text="@string/getir"
            android:textColor="@color/white"
            android:textSize="@dimen/service_button_button_text_size" />

    </LinearLayout>

</LinearLayout>