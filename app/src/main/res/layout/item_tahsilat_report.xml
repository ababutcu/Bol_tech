<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/tahsilat_report_item_padding"
            android:paddingEnd="@dimen/tahsilat_report_item_padding"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCustomerNameTahsilat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/service_report_item_padding"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="start|center_vertical"
                    android:paddingTop="@dimen/working_report_item_padding"
                    android:text="@string/ornek_kullanici"
                    android:textColor="@color/black"
                    android:textSize="@dimen/service_report_item_text_size_medium"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/tvUserNameTahsilat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/service_report_item_padding"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="start|center_vertical"
                    android:paddingTop="@dimen/working_report_item_padding"
                    android:text="@string/ornek_kullanici"
                    android:textColor="@color/black"
                    android:textSize="@dimen/service_report_item_text_size_medium"
                    tools:ignore="NestedWeights" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tvTahsilatTarihi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/service_report_item_padding"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:paddingTop="@dimen/working_report_item_padding"

                android:text="@string/ornek_tarih"
                android:textColor="@color/black"
                android:textSize="@dimen/service_report_item_text_size_medium"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/tvTahsilatMiktari"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/service_report_item_padding"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:gravity="end|center_vertical"
                android:paddingTop="@dimen/working_report_item_padding"
                android:text="@string/ornek_bakiye"
                android:textColor="@color/claret_red"
                android:textSize="@dimen/service_report_item_text_size_big" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTahsilatAciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tahsilat_report_item_padding"
            android:layout_marginEnd="@dimen/tahsilat_report_item_padding"
            android:textSize="@dimen/service_report_item_text_size_medium"
            android:text="@string/lorem"
            android:layout_gravity="center"
            android:gravity="start"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black_99"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>